# last modified 2021-01-11

adocf=$1

basef=$(basename $adocf .adoc)

asciidoctor -a linkcss -b docbook5 $adocf

sed -i \
  -e 's/<figcaption>.*<\/figcaption>//' \
  $basef.xml

pandoc -f docbook -t markdown $basef.xml -s -o $basef.md

sed -i \
  -e 's/<figcaption>.*<\/figcaption>//' \
  $basef.html

