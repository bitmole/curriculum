#!/bin/bash

BROKEN_INTERNAL_LINKS=

for g in "$@"; do

  containingFile=${g%.internal-links.txt.kp}
  containingFile=$(echo $containingFile|sed -e 's/\.cached\/\.//').adoc

  for f in $(cat $g); do

    if ! test -f "$f"; then
      BROKEN_INTERNAL_LINKS=1
      echo
      echo WARNING: Invalid internal link $f in $containingFile
    fi
  done
done

if test $BROKEN_INTERNAL_LINKS; then
  echo üëé Broken internal links found
else
  echo üëç No broken internal links found
fi
