# last modified 2020-05-04

userid=$1

YEAR=2020
SEMESTER=spring

DEPLOY_DIR=/gpfs/main/authen/sys/web/cs/web/sites/bootstrapworld.org/materials/$SEMESTER$YEAR/courses

echo Deploying docs on Brown site...

ssh $userid@ssh.cs.brown.edu "cd tmp;rm -fr courses;tar jxf courses.tar.bz2;find courses -type d|xargs chmod g+rwx,o+rx; find courses -type f|xargs chmod g+rw,o+r; chgrp -R cs-plt courses;cd courses;for d in *; do if test ! -d \$d; then break; fi; rm -fr $DEPLOY_DIR/\$d; mv \$d $DEPLOY_DIR; done;cd $DEPLOY_DIR;chmod g+rwx,o+rx *"

echo Deployment done!
